    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="uk.co.tommywebdesign.feedmeapplication.activities.Ingredients">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="uk.co.tommywebdesign.feedmeapplication.fragments.IngredientsFragment"
            android:id="@+id/ingredients_fragment"
            tools:layout="@layout/ingredients_frag" />
    </FrameLayout>
</LinearLayout>
