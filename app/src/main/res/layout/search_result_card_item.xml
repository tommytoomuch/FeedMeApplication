<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:backgroundTint="@color/colorVeg"
    android:id="@+id/search_result_item_container"
    android:layout_margin="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:contentPadding="8dp"
        app:cardElevation="10dp"
        android:background="@color/cardview_shadow_start_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_marginStart="18dp"
                android:id="@+id/serach_res_item_image"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_width="140dp"
                android:layout_height="140dp" />

            <Button
                android:text="Get this recipe"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/button3"
                android:backgroundTint="@color/colorVeg"
                android:layout_weight="1"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="22dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="Recipe title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/search_res_item_title"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_alignTop="@+id/serach_res_item_image"
                android:layout_toEndOf="@+id/serach_res_item_image" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>